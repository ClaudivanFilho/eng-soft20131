<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/butao_tampa1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:text="Tampa 1" >
    </Button>

    <Button
        android:id="@+id/butao_tampa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/butao_tampa1"
        android:layout_below="@+id/butao_tampa1"
        android:layout_marginTop="50dp"
        android:text="Tampa 2" />

    <Button
        android:id="@+id/butao_voltarTampa"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="50dp"
        android:text="@string/name_voltar" />

</RelativeLayout>