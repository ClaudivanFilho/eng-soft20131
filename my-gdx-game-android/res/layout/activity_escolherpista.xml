<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/butao_voltar"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="14dp"
        android:background="@null"
        android:src="@drawable/undo" />

    <ImageButton
        android:id="@+id/butao_avancar"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:background="@null"
        android:src="@drawable/clean" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="360dp"
              android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="228dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/butaopista1"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/new_button" />

            <Button
                android:id="@+id/butaopista2"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/new_button" />

            <Button
                android:id="@+id/butaopista3"
                android:layout_width="228dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/new_button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >
            </Button>
        </LinearLayout>
    </HorizontalScrollView>

    <CheckedTextView
        android:id="@+id/checkedTextView1"
        style="@style/nomes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/horizontalScrollView1"
         android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/name_escolher" />

</RelativeLayout>